/**index.wxss**/
page {
  background: #ededed;
}

.banner {
  height: 350rpx;
}

.banner .banner_link {
  position: relative;
}

.banner .banner_pic {
  width: 100%;
  height: 350rpx;
  display: block;
}

.banner .banner_title {
  position: absolute;
  display: block;
  padding: 0 20rpx;
  box-sizing: border-box;
  bottom: 0rpx;
  z-index: 99;
  left: 0rpx;
  font-size: 30rpx;
  line-height: 70rpx;
  background: rgba(0, 0, 0, .2);
  width: 100%;
  color: #fff;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.msg {
  background: #fac655;
  padding-left: 20rpx;
}

.msg .info {
  padding-left: 10rpx;
  padding-right: 20rpx;
}

.list {
  background-color: #ffffff;
  padding: 2rpx 10rpx;
  display: flex;
  flex-wrap: wrap;
}

.list .item {
  width: 48%;
  display: flex;
  height: 180rpx;
}

.list .item .item_pic {
  width: 100rpx;
  height: 100rpx;
  margin: 20rpx 10rpx 5rpx;
}

.list .item .item_but {
  margin-top: 20rpx;
}

.list .item .item_but .item_h {
  color: #111;
  font-size: 32rpx;
  font-weight: bold;
}

.list .item .item_but .item_f {
  font-size: 26rpx;
  color: #333;
}