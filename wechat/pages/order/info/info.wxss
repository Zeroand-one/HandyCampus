.conent {
  background-color: #fff;
}

.conent .pan {
  padding: 10rpx !important;
  margin: 30rpx !important;
  border-radius: 20rpx;
  background-color: #eee;
}

.conent .pan .item {
  height: 64rpx;
  line-height: 64rpx;
  padding-left: 10rpx;
  font-size: 30rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  color: #333;
}

.conent .pan .bz {
  height: 300rpx;
  color: #333;
  font-size: 30rpx;
  padding-left: 10rpx;
}

.conent .order .te {
  font-size: 36rpx;
  padding-left: 50rpx;
}

.conent .order .te text {
  color: #ff7300;
}

.conent .img {
  font-size: 30rpx;
  color: #333;
}

.conent .img .itemImg {
  width: 200rpx;
  height: 200rpx;
  margin: 10rpx 10rpx;
}

.conent .back textarea {
  background-color: #fff;
  margin: 20rpx auto;
  width: 100%;
  border-radius: 10rpx;
}

.conent .back button {
  width: 60%;
}