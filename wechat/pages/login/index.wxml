<view wx:if="{{isHide}}">
  <view wx:if="{{canIUse}}">
    <view class='header'>
      <image src='../../images/logo5.png'></image>
    </view>
    <view class='content'>
      <text>请允许获得你的公开信息</text>
    </view>
    <view class="">
