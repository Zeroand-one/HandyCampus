<view class='header'>
  <image src='../../../images/logo5.png'></image>
</view>
<view class='msg'>
  <text>请允许获得你的公开信息</text>
</view>
<view class="content">
  <input class="" maxlength="11" data-name="phone_number" bindinput="bindInput" type="number" placeholder="输入11位手机号码"></input>
  <input type="text" id="code" name="codeImg" placeholder-class="C3" bindinput="codeImgInput" placeholder="请输入图形验证码" maxlength="4" value='{{imgCode}}' />
  <view class="canv" bindtap="onTap">
    <canvas canvas-id="canvas"></canvas>
  </view>
</view>
<button class="btn" lang="zh_CN" bindtap="submit" type="primary">登录 / 注册</button>