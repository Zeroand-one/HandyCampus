/* pages/news/list/list.wxss */
page{background:#ededed;}
/* 次导航 */
.navd{padding-bottom:.1rpx;}
.nav{
  width:100%;
  white-space:nowrap;
  overflow:hidden;
  line-height:80rpx;
  background:#fff;
  margin-bottom:20rpx;
}
.nav .nav_item{
  border-bottom:1px solid #fff;
  width:150rpx;
  display:inline-block;
  white-space:normal;
  text-align:center;
  font-size: 26rpx;
  text-align: center;
}
.nav .nav_item.on{
  border-color:red;
}
/* 列表 */
.list{background:#ededed;padding-bottom:10px;box-sizing: border-box;}
.list .item{padding:10rpx 20rpx;background:#fff;}
.list .item_pic{width:100%;height:300rpx;}
.list .item_h{
  font-size:30rpx;font-weight: bold;margin-bottom:10rpx;
  overflow: hidden;text-overflow:ellipsis;white-space: nowrap;
}
.list .item_p{
  font-size:30rpx;height:80rpx;line-height:40rpx;margin-bottom:10rpx;
  display: -webkit-box;-webkit-box-orient: vertical;-webkit-line-clamp: 2;overflow:hidden;
}
.list .item_ov{display: flex;align-items: center;justify-content: space-between;}
.list .item_time{font-size: 26rpx;display: flex;align-items: center;}
.list .item_red{color:red;margin-left: 20rpx;}
.list .item_icon{font-size:20rpx;}
.list .item_num{font-size:26rpx;}
.list .list_text{
  line-height: 60rpx;
  font-size:30rpx;
  text-align: center;
}